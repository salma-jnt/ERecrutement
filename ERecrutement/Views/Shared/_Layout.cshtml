<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERecrutement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.hh.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ERecrutement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Offres" asp-action="Index">Offres</a>
                        </li>

                        @if (User.IsInRole("Candidat"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Candidats" asp-action="Offres">Voir les Offres</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Candidats" asp-action="Historique">Mes Candidatures</a>
                            </li>
                        }

                        @if (User.IsInRole("Recruteur"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Recruteurs" asp-action="MesOffres">Gérer Mes Offres</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ERecrutement - <a asp-controller="Home" asp-action="Privacy">Confidentialité</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
