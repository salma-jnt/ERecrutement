@model ERecrutement.Models.Offre

@{
    ViewData["Title"] = "Modifier une Offre";
}

<h2>Modifier une Offre</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Poste"></label>
        <input asp-for="Poste" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="TypeContrat"></label>
        <input asp-for="TypeContrat" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Secteur"></label>
        <input asp-for="Secteur" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Profil"></label>
        <input asp-for="Profil" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Remuneration"></label>
        <input asp-for="Remuneration" type="number" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="MesOffres" class="btn btn-secondary">Annuler</a>
</form>
