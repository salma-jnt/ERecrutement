@model ERecrutement.Models.Offre
@{
    ViewData["Title"] = "Supprimer l'Offre";
}

<h2>Supprimer l'Offre</h2>

<p>Voulez-vous vraiment supprimer cette offre ?</p>

<ul>
    <li><strong>Poste :</strong> @Model.Poste</li>
    <li><strong>Type de Contrat :</strong> @Model.TypeContrat</li>
    <li><strong>Rémunération :</strong> @Model.Remuneration €</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a class="btn btn-secondary" href="@Url.Action("MesOffres", "Recruteurs")">Annuler</a>
</form>
